{
    "compilerOptions": {
      "module": "CommonJS",
      "lib": [
        "ES2020"
      ],
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "checkJs": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "src",
      "incremental": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "types": [ "node" ],
      "typeRoots": [ "node_modules/@types" ]
    },
    "include": [
      "./src/**/*",
    ]
}